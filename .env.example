# CohortSec - Personal Digital Bodyguard (B2C)
# Copy to .env and fill in values

# ========== Database ==========
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=cohortsec
POSTGRES_PASSWORD=cohortsec_secure_password_change_me
POSTGRES_DB=cohortsec_db

# ========== Redis ==========
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ========== Backend ==========
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
ENCRYPTION_KEY=your-fernet-encryption-key-base64-32-bytes==

# ========== Keycloak (optional SSO) ==========
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=cohortsec
KEYCLOAK_CLIENT_ID=cohortsec-frontend
KEYCLOAK_CLIENT_SECRET=cohortsec-client-secret

# ========== S3 / MinIO ==========
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=cohortsec-backups
MINIO_SECURE=false

# ========== Application ==========
API_V1_PREFIX=/api/v1
DEBUG=false
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
